{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"recommended": true
			},
			"correctness": {
				"recommended": true
			},
			"complexity": {
				"recommended": true
			},
			"suspicious": {
				"recommended": true
			},
			"performance": {
				"recommended": true
			},
			"style": {
				"recommended": true,
				"noDefaultExport": "off",
				"useConst": "error",
				"useTemplate": "warn",
				"noParameterAssign": "warn"
			},
			"security": {
				"recommended": true
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "double",
			"semicolons": "asNeeded",
			"trailingCommas": "none",
			"bracketSpacing": true
		}
	},
	"json": {
		"formatter": {
			"enabled": true
		}
	}
}
